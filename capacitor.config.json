{
  "appId": "com.livingloom.app",
  "appName": "Living Loom",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon_config_sample",
      "iconColor": "#8B5CF6",
      "sound": "beep.wav"
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0f0f23",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "iosSpinnerStyle": "small",
      "spinnerColor": "#8B5CF6"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark",
      "resizeOnFullScreen": true
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#0f0f23"
    }
  },
  "ios": {
    "scheme": "Living Loom",
    "contentInset": "automatic"
  },
  "android": {
    "buildOptions": {
      "keystorePath": "release-key.keystore",
      "keystoreAlias": "living-loom-key"
    },
    "allowMixedContent": true
  }
}